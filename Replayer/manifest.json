{
   "manifest_version": 3,
   "name": "Replayer",
   "version": "1.0",
   "description": "A simple HTTP request replayer in DevTools.",
   "devtools_page": "devtools.html",
   "background": {
     "service_worker": "background.js"
   },
   "permissions": [
     "activeTab",
     "webRequest",
     "scripting",
     "storage",
     "contextMenus" // Ensure this is present
   ],
   "host_permissions": [
     "<all_urls>"
   ]
 }